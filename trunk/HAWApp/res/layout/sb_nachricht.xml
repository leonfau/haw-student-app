<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.29" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/sb_nachricht_titel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sb_nachricht_titel"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/sb_nachricht_autor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sb_nachricht_autor"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/sb_nachricht_datum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sb_nachricht_datum"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/sb_nachricht_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sb_nachricht_text"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/sb_nachricht_strich"
                android:layout_width="fill_parent"
                android:layout_height="2sp"
                android:background="#000000" />

            <TextView
                android:id="@+id/sb_nachricht_kontakt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sb_nachricht_kontakt"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_sb_nachricht_zurueck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:onClick="finish"
            android:text="@string/sb_nachricht_zurueck" />
    </FrameLayout>

</LinearLayout>