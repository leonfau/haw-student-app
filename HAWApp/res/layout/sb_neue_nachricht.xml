<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/sb_neue_nachricht_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sb_neue_nachricht_titel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sb_neue_nachricht_titel_tv"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/sb_neue_nachricht_titel_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sb_neue_nachricht_bild_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sb_neue_nachricht_bild_tv"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/sb_neue_nachricht_bild_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" />

        <Button
            android:id="@+id/btn_sb_neue_nachricht_bild"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sb_neue_nachricht_bild"
            android:onClick="loadBildUrl" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sb_neue_nachricht_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sb_neue_nachricht_text_tv"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/sb_neue_nachricht_text_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sb_neue_nachricht_kontakt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sb_neue_nachricht_kontakt_tv"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/sb_neue_nachricht_kontakt_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPostalAddress" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="9dp" >

        <Button
            android:id="@+id/btn_sb_neue_nachricht_erstellen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="@string/sb_neue_nachricht_erstellen" 
            android:onClick="erstellNachricht"/>

        <Button
            android:id="@+id/btn_sb_neue_nachricht_zurueck"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="@string/sb_neue_nachricht_zurueck"
            android:onClick="finish" />
    </LinearLayout>

</LinearLayout>